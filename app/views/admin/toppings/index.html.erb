<% @page_title = "トッピング一覧" %>
<h1><%= @page_title %></h1>

<% if @toppings.present? %>
  <table class="list">
    <thead>
      <tr>
        <th>トッピング名</th>
      </tr>
    </thead>
    <tbody>
      <% @toppings.each do |topping| %>
        <tr>
          <td><%= link_to topping.name, [:admin, topping] %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>トッピング情報がありません。</p>
<% end %>


<% @page_title = "トッピングの新規作成" %>

<h1><%= @page_title %></h1>

<%= form_for [:admin, @topping] do |form| %>
<table class="attr">
  <tr>
    <th><%= form.label :name, "トッピング名" %></th>
    <td><%= form.text_field :name %></td>
  </tr>
  <tr>
    <th><%= form.label :price, "値段" %></th>
    <td><%= form.text_field :price %></td>
  </tr>
  <tr>
    <th><%= form.label :stock, "ストック" %></th>
    <td><%= form.text_field :stock %></td>
  </tr>
</table>
<div><%= form.submit "トッピングの新規登録"%></div>
<% end %>

<div class="toolbar"><%= link_to "<<管理者topへ", :admin_administrators %></div>
