<% @page_title = "サイドメニュー一覧" %>
<h1><%= @page_title %></h1>

<% if @sidemenus.present? %>
  <table class="list">
    <thead>
      <tr>
        <th>サイドメニュー名</th>
      </tr>
    </thead>
    <tbody>
      <% @sidemenus.each do |sidemenu| %>
        <tr>
          <td><%= link_to sidemenu.name, [:admin, sidemenu] %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>サイドメニュー情報がありません。</p>
<% end %>


<% @page_title = "サイドメニューの新規作成" %>

<h1><%= @page_title %></h1>

<%= form_for [:admin, @sidemenu] do |form| %>
<table class="attr">
  <tr>
    <th><%= form.label :name, "サイドメニュー名" %></th>
    <td><%= form.text_field :name %></td>
  </tr>
  <tr>
    <th><%= form.label :price, "値段" %></th>
    <td><%= form.text_field :price %></td>
  </tr>
  <tr>
    <th><% options = ["Sサイズ", 0], ["Mサイズ", 1], ["Lサイズ", 2]%><%= form.label :size, "サイズ" %></th>
    <td><%= form.select :size, options %></td>
  </tr>
  <tr>
    <th>おすすめ</th>
    <td>
      <%= form.check_box :recommend %>
      <%= form.label :recommend, "おすすめ" %>
    </td>
  </tr>
</table>
<div><%= form.submit "サイドメニュー新規登録"%></div>
<% end %>

<div class="toolbar"><%= link_to "<<管理者topへ", :admin_administrators %></div>
