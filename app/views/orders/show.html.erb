<% @page_title = @order.member.name + "さんのカート内情報" %>
<h1><%= @page_title %></h1>

<% if @order.products.present? %>
  <% @order.products.each do |product| %>
    <h3><%= product.mainmenu.name %></h3>
    <% product.toppings.each do |topping| %>
      <p><%= topping.name %></p>
    <% end %>
  <% end %>
<% else %>
 <p>カートに情報がありません。</p>
<% end %>

