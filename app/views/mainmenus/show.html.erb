<% @page_title = "メインメニュー詳細" %>

<h1><%= @page_title %></h1>

<div class="toolbar"><%= link_to "トッピングの追加", edit_mainmenu_path(@mainmenu) %></div>

<table class="attr">
  <tr>
    <th>メインメニュー名</th>
    <td><%= @mainmenu.name %></td>
  </tr>
  <tr>
    <th>値段</th>
    <td><%= @mainmenu.price %></td>
  </tr>
  <tr>
    <th>サイズ</th>
    <td><%= @mainmenu.size %></td>
  </tr>
  <tr>
    <th>トッピング</th>
    <% @mainmenu.toppings.each do |topping| %>
    <td><%= topping.name %></td>
    <% end %>
  </tr>

<div class="toolbar"><%= link_to "<<Topへ", :root %></div>
