<% @page_title = "メインメニュー一覧" %>
<h1><%= @page_title %></h1>

<% if @mainmenus.present? %>
  <table class="list">
    <thead>
      <tr>
        <th>メインメニュー名</th>
      </tr>
    </thead>
    <tbody>
      <% @mainmenus.each do |mainmenu| %>
        <tr>
          <td><%= link_to mainmenu.name, mainmenu %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>メインメニュー情報がありません。</p>
<% end %>


<% @page_title = "メインメニューの新規作成" %>

<h1><%= @page_title %></h1>

<%= form_for @mainmenu do |form| %>
<table class="attr">
  <tr>
    <th><%= form.label :name, "メインメニュー名" %></th>
    <td><%= form.text_field :name %></td>
  </tr>
  <tr>
    <th><%= form.label :price, "値段" %></th>
    <td><%= form.text_field :price %></td>
  </tr>
  <tr>
    <th><% options = ["Sサイズ", 0], ["Mサイズ", 1], ["Lサイズ", 2]%><%= form.label :size, "サイズ" %></th>
    <td><%= form.select :size, options %></td>
  </tr>
  <tr>
    <th>おすすめ</th>
    <td>
      <%= form.check_box :recommend %>
      <%= form.label :recommend, "おすすめ" %>
    </td>
  </tr>
</table>
<div><%= form.submit "新規登録"%></div>
<% end %>

<div class="toolbar"><%= link_to "<<Top", :root %></div>
